@model BibliotecaMVC.Models.Libro

<h2>Editar Libro</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="LibroID" />
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ISBN" class="control-label"></label>
        <input asp-for="ISBN" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Editorial" class="control-label"></label>
        <input asp-for="Editorial" class="form-control" />
        <span asp-validation-for="Editorial" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutorID" class="control-label">Autor</label>
        <select asp-for="AutorID" class="form-control">
            <option value="">Seleccione un autor</option>
            @if (ViewBag.Autores is List<BibliotecaMVC.Models.Autor> autores)
            {
                @foreach (var autor in autores)
                {
                    <option value="@autor.AutorID" selected="@(Model.AutorID == autor.AutorID)">
                        @autor.Nombre @autor.Apellido
                    </option>
                }
            }
        </select>
        <span asp-validation-for="AutorID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaID" class="control-label">Categoría</label>
        <select asp-for="CategoriaID" class="form-control">
            <option value="">Seleccione una categoría</option>
            @if (ViewBag.Categorias is List<BibliotecaMVC.Models.Categoria> categorias)
            {
                @foreach (var categoria in categorias)
                {
                    <option value="@categoria.CategoriaID" selected="@(Model.CategoriaID == categoria.CategoriaID)">
                        @categoria.Nombre
                    </option>
                }
            }
        </select>
        <span asp-validation-for="CategoriaID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumeroCopias" class="control-label"></label>
        <input asp-for="NumeroCopias" class="form-control" />
        <span asp-validation-for="NumeroCopias" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
