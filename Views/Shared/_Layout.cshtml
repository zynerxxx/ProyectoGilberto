<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BibliotecaMVC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/custom.css" /> <!-- Archivo CSS personalizado -->
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BibliotecaMVC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Libros" asp-action="Index">Libros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Prestamos" asp-action="Index">Préstamos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Categorias" asp-action="Index">Categorías</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Autores" asp-action="Index">Autores</a>
                    </li>
                </ul>
                <div class="user-info">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <span>Hola, @User.Identity.Name!</span>
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Cerrar sesión</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Ingresar</a>
                        <a asp-controller="Usuarios" asp-action="Create" class="btn btn-primary">Crear usuario</a>
                    }
                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
