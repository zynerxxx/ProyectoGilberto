@model IEnumerable<BibliotecaMVC.Models.Autor>

<h2>Autores</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Autor</a>
    </p>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Nacionalidad</th>
            <th>Fecha de Nacimiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var autor in Model)
        {
            <tr>
                <td>@autor.Nombre</td>
                <td>@autor.Apellido</td>
                <td>@autor.Nacionalidad</td>
                <td>@autor.FechaNacimiento?.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@autor.AutorID" class="btn btn-info btn-sm">Detalles</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@autor.AutorID" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@autor.AutorID" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
