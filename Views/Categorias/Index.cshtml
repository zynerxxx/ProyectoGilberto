@model IEnumerable<BibliotecaMVC.Models.Categoria>

<h2>Categorías</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nueva Categoría</a>
    </p>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Nombre</td>
                <td>@categoria.Descripcion</td>
                <td>
                    <a asp-action="Details" asp-route-id="@categoria.CategoriaID" class="btn btn-info btn-sm">Detalles</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@categoria.CategoriaID" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@categoria.CategoriaID" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
